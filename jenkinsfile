pipeline {
  environment {
    registry = "yaskazeko/django_mysite"
    registryCredential = 'dockerhub'
  }
  agent { label 'master'}
  stages {
    stage('Cloning Git') {
      steps {
        git 'git@github.com:yaskazeko/wordpress.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
    stage('Deploy Image') {
      steps{
        script {
          docker.withRegistry('', registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }

    stage('Remove Unused docker image') {
      steps{
        sh "docker rmi $registry:$BUILD_NUMBER"
      }
    }

    stage('install docker to target'){
          steps {
                  sh """
                  cd /var/lib/jenkins/VM/
                  ansible-playbook -i inventory.yaml install.yaml
                  """
          }
    }

      stage('Update wordpress'){
          steps {
                  sh """
                  cd /var/lib/jenkins/VM/
                  ansible-playbook -i inventory.yaml update.yaml
                  """
          }
      }
  }
  post {
            success {
                slackSend (color: '#00FF00', message: "SUCCESSFUL: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")
            }
            failure {
                slackSend (color: '#FF0000', message: "FAILED: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]' (${env.BUILD_URL})")
            }
  }
}
